{
  "editor.rulers": [160],
  "editor.renderWhitespace": "all",
  "editor.formatOnSave": true,
  "workbench.editor.enablePreview": false,
  "workbench.startupEditor": "newUntitledFile",
  "window.openFoldersInNewWindow": "on",
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "salesforcedx-vscode-apex.java.home": "C:\\Program Files\\Java\\jdk-21", // In MacOs this is located in the /Library/Java/JavaVirtualMachines/jdk-21.jdk/Contents/Home folder
  "codeAnalyzer.scanner.engines": "pmd,eslint-lwc,eslint",
  "scm.defaultViewMode": "tree",
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.sfdx": true
  },
  "salesforcedx-vscode-core.show-cli-success-msg": false
}